<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logoi"
        tools:layout_editor_absoluteY="55dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indentify yourself"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/pass_enter"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="    Password"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:background="@drawable/dt"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="20sp"
        android:paddingLeft="20sp"
        android:layout_marginTop="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/login_enter"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50sp"
        android:textSize="30sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Login"
        android:background="@drawable/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_enter"
        tools:ignore="UnknownId" />
</androidx.constraintlayout.widget.ConstraintLayout>